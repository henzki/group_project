<!DOCTYPE html>
<html lang="en">

<head>
    <style>

        /* --CHANGES THE COLORS ON THE PAGE-- */
        body {
            background-color: <%= brandguide.bgcolor %>;
        }

        input {
            background-color: <%= brandguide.bgcolor %>;
        }
        .topnav, .sidenav{
            background-color: <%= brandguide.navbgcolor %>;
        }
        .topactive, .sideactive {
            background-color: <%= brandguide.bgcolor %>;
        }
        .topactive {
            border-bottom: 1px solid <%= brandguide.bgcolor %>;
        }
        .topmain, .sidemain {
            background-color: <%= brandguide.bgcolor %>;
        }
        
    </style>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <script src="../main.js"></script>
    <script src="https://kit.fontawesome.com/704ff50790.js" crossorigin="anonymous">
    </script>
    <title>
        <%= title %>
    </title>

</head>
<body>
    <div class="<%= brandguide.layout %>nav">
        <img src="/uploads/image/<%= brandguide.firstimage %>" width="200px" height="200px"/>
        <a href="/view/<%= brandguide._id %>" class="<%= brandguide.layout %>nav-item"><span>Intro</span></a>
        <a href="/logo/<%= brandguide._id %>" class="<%= brandguide.layout %>nav-item"><%= brandguide.logoHeader %> </a>
        <a href="/font/<%= brandguide._id %>" class="<%= brandguide.layout %>nav-item"><%= brandguide.fontHeader %> </a>
        <a href="/color/<%= brandguide._id %>" class="<%= brandguide.layout %>nav-item"><%= brandguide.colorsHeader %> </a>
        <a href="/media/<%= brandguide._id %>" class="<%= brandguide.layout %>nav-item"><%= brandguide.mediaHeader %> </a>

        <!--OPTIONALS
        <a href="/optionalone/<%= brandguide._id %>" class="<%= brandguide.layout %>active"><%= brandguide.colorsHeader %> </a>
        <a href="/optionaltwo/<%= brandguide._id %>" class="<%= brandguide.layout %>nav-item"><%= brandguide.mediaHeader %> </a> 
        -->


        <div class="<%= brandguide.layout %>nav-end">
        </div>
    </div>
    

    <div class="<%= brandguide.layout %>main">
    <div class="<%= brandguide.layout %>flexbox-container" id="intro">
        <div class="row">
            <div>
                <div>
                    <div>
                        <h3 class="text-dark"><%= brandguide.optionalOneHeader %></h3>
                    </div>
                    <div class=""><img src="/uploads/optionalOneimage/<%= brandguide.optionalOneimage %>" width="300px" height="300px"/></div>
                    <div class=""><%= brandguide.optionalOneDescription %></div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.11.5/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $("table").DataTable({
                order: [0, 'desc']
            });
        });

    </script>
</body>
</html>